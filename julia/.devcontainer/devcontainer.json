{
	"name": "Julia",
  "build": {
		"dockerfile": "Dockerfile",
		"args": { "VERSION": "new" },
	},
  "workspaceMount": "src=${localWorkspaceFolder}/julia/upstream,dst=/julia,type=bind,ro=true,consistency=cached",
	"extensions": ["julialang.language-julia"],
	"postCreateCommand": "/scripts/postcreate.jl",
	"remoteUser": "vscode"
}
